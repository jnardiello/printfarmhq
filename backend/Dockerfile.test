# Backend Test Image
ARG REGISTRY=ghcr.io
ARG NAMESPACE=jnardiello
ARG BASE_TAG=latest

FROM ${REGISTRY}/${NAMESPACE}/printfarmhq:backend-base-${BASE_TAG} AS backend-test

# Switch to root to install packages
USER root

# Copy requirements as root
COPY --chown=appuser:appuser requirements.txt ./

# Switch back to appuser
USER appuser

# Install base dependencies
RUN pip install --user --no-cache-dir -r requirements.txt

# Install test dependencies
RUN pip install --user --no-cache-dir \
    pytest==8.3.3 \
    pytest-asyncio==0.24.0 \
    pytest-cov==5.0.0 \
    pytest-env==1.1.5 \
    pytest-mock==3.14.0 \
    faker==37.3.0 \
    httpx==0.28.1

# Copy application code
COPY --chown=appuser:appuser . .

# Create test data directory
USER root
RUN mkdir -p /app/test_data && chown -R appuser:appuser /app/test_data
USER appuser

# Add labels for GitHub Container Registry
LABEL org.opencontainers.image.source="https://github.com/jnardiello/printfarmhq"
LABEL org.opencontainers.image.description="PrintFarmHQ Backend Test - Testing environment for backend"
LABEL org.opencontainers.image.licenses="AGPL"
LABEL org.opencontainers.image.title="PrintFarmHQ Backend Test"
LABEL org.opencontainers.image.vendor="PrintFarmHQ"

# Set environment variables
ENV PYTHONPATH=/app \
    PYTEST_CURRENT_TEST=true

# Default test command
CMD ["python", "-m", "pytest", "-v", "--cov=app", "--cov-report=term-missing", "--cov-report=html", "--cov-report=xml", "--junitxml=test-results/junit.xml"]